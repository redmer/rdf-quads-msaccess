{
  "name": "@rdmr-eu/rdfjs-source-msaccess",
  "version": "1.0.2",
  "description": "Generate RDF quads from a Microsoft Access database.",
  "main": "dist/cli.js",
  "repository": "https://github.com/redmer/rdfjs-source-msaccess.git",
  "author": "Redmer Kronemeijer <12477216+redmer@users.noreply.github.com> (https://rdmr.eu/)",
  "license": "MPL-2.0",
  "private": false,
  "bin": "dist/cli.js",
  "scripts": {
    "test": "jest",
    "build": "tsc -p ./tsconfig.json",
    "watch": "tsc --watch -p ./tsconfig.json",
    "lint": "cross-env ESLINT_STRICT=true ESLINT_EXPENSIVE=true eslint . --ext .ts",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn run lint",
    "preversion": "yarn run lint",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist/**/*"
  ],
  "types": "dist",
  "type": "module",
  "devDependencies": {
    "@types/n3": "^1.10.4",
    "@types/node": "^18.11.3",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^27.1.3",
    "jest": "^29.4.1",
    "prettier": "^2.3.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.3.2"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "testMatch": [
      "**/(*.)+test\\.ts"
    ],
    "transform": {
      "\\.[tj]sx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  },
  "prettier": {
    "printWidth": 100
  },
  "dependencies": {
    "@rdfjs/types": "^1.1.0",
    "mdb-reader": "^2.2.4",
    "n3": "^1.10.0",
    "yargs": "^17.6.0"
  }
}
